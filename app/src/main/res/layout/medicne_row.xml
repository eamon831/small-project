<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/curved"
    android:weightSum="5"
    android:layout_marginBottom="5dp">
    <ImageView
        android:id="@+id/medicine_img"
    android:layout_margin="10dp"
    android:padding="5dp"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:src="@drawable/splash"
    android:layout_weight="1"
    android:scaleType="fitXY">
</ImageView>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:orientation="vertical">
        <TextView
            android:id="@+id/trae_name"
            android:layout_marginTop="5dp"
            android:padding="5dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trade Name"
            android:textStyle="italic|bold"
            android:textSize="16sp"
            android:textColor="#000">

        </TextView>
        <TextView
            android:id="@+id/composition"
            android:padding="5dp"
            android:layout_margin="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Composition"
            android:textColor="#000"

            android:textSize="12sp"
            android:textStyle="italic|bold">

        </TextView>
        <TextView
            android:id="@+id/trade_dos"
            android:padding="5dp"
            android:layout_margin="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trade Dose"
            android:textStyle="italic|bold"
            android:textSize="12sp"
            android:textColor="#000"
            >

        </TextView>
        <TextView
            android:id="@+id/company"
            android:padding="5dp"
            android:layout_marginBottom="5dp"
            android:textColor="#11DF57"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Company"
            android:textSize="13sp"
            android:textStyle="italic|bold">

        </TextView>



    </LinearLayout>








</LinearLayout>